@font-face {
  font-family: 'Playfair Display';
  src: url('https://cloud-minapp-36536.cloud.ifanrusercontent.com/1k6qyaM23SNhFZqG.ttf');
}
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background: white;
} 
.buy-btn {  
  font-family: sans-serif;
  color: white;
  background: black;
  border-radius: 3px;
}
.p {
  font-family: sans-serif;
  font-size: 14px;
}

.h1 {
  font-family: futura;
  font-size: 26px;
  font-weight: bold;
  font-variant-caps: all-petite-caps;
  line-height: 0.9;
}
.h2 {
  font-family: futura;
  font-size: 18px;
  letter-spacing: -0.5px;
  font-weight: bold;
 }
.h3 {
  font-family: sans-serif;
  font-weight: bolder;
  font-size: 18px;
  color: rgb(50, 50, 50);
}

.h4 {
  font-family: sans-serif;
  font-size: 12px;
}
.gif {
  align-items: center;
}
.bannerText {
  text-align: left;
  width: 100px;
  padding-left: 100px;
  padding: 150px 0;
}

