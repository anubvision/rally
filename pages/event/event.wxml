<!--pages/event/event.wxml-->
<view class="container">
  <view class="h1" style="margin-top: 30px">Let's make plans</view>
  <view class="create-event">
  <form bindsubmit="formSubmit">
    <view class="input-card">
        <input name="title" class="input-text" placeholder="Title">Title</input>
    </view>

    <view class="input-card">
      <textarea name="description" class="input-text" placeholder="Description" cursor="auto" style="height: 3em"></textarea>
    </view>
      

        <view class="input-card search">
          <view class="searchTop">
            <view class="inputSelect">
              <view class="selectBox">
                <view wx:if="{{!selectvenueID}}" wx:for="{{selectData}}" wx:key="this" wx:for-item="result" data-id="{{result.id}}"  data-name="{{result.name_en}}" bindtap="selectResult">{{result.name_en}}</view>
              </view>

              <input placeholder="Search venue..." bindinput="getSearchInput" value="{{searchInput}}"/>
            </view>
          </view>
        </view>

        <button class="buy-btn" bindtap="locationPicker">Location</button>

    <view class="h1">When?</view>

    <view class="h2">more than one option if you canâ€™t decide</view>
    <image class="gif" src=" /pages/images/time-think.gif"></image>
    <!-- choose date & time -->

    <view class="date-time">
      <view class="date-title">Pick at least one date + time</view>

    <view class="input-date 1">
        <view class="date-picker">
          <view class="picker-date">
            <picker bindchange="bindDateChange1" name="date1" mode="date" value="{{date}}">
              <view wx:if="date">
                <view>{{date1}}</view>
              </view>
            </picker>
        </view>
      </view>
      <view class="time-picker">
        <view class="picker-date time">
          <picker bindchange="bindTimeChange1" name="time1" mode="time" value="{{time}}">
            <view class="weui-input">{{time1}}</view>
          </picker>
        </view>

       </view>


    </view>

    <view class="input-date 2">
      <view class="date-picker">
        <view class="picker-date">
          <picker name="date2" mode="date" value="{{date}}" bindchange="bindDateChange2">
            <view wx:if="date">
              <view>{{date2}}</view>
            </view>
          </picker>
      </view>
    </view>
    <view class="time-picker">
      <view class="picker-date time">
        <picker name="time2" mode="time" value="{{time}}" bindchange="bindTimeChange2">
          <view class="weui-input">{{time2}}</view>
        </picker>
      </view>
    </view>
    </view>

    <view class="input-date 3">
      <view class="date-picker">
        <view class="picker-date">
          <picker name="date3" mode="date" value="{{date}}" bindchange="bindDateChange3">
            <view wx:if="date">
              <view>{{date3}}</view>
            </view>
          </picker>
      </view>
    </view>
    <view class="time-picker">
      <view class="picker-date time">
        <picker name="time3" mode="time" value="{{time}}" bindchange="bindTimeChange3">
          <view class="weui-input">{{time3}}</view>
        </picker>
      </view>
    </view>
    </view>
 </view>
    <!-- button -->

    <view class="button">
        <button bindtap="toEvent" class="h1" formType="submit" class="buy-btn">Post</button>
    </view>
  </form>
  </view>
</view>
