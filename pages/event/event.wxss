.h1 {
  font-family: 'Playfair Display';
  font-weight: bold;
  font-size: 22px;
  margin: 60px 0 0 0;

  }

  .h2 {
    font-family: 'Playfair Display';
    font-weight: bold;
    font-size: 14px;
    color: #616161;
    }
  
.p {
  font-family: sans-serif;
  font-size: 16px;
}
.create-event {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20px;
  
}
.input-card{
  background-color: #f6f6f6;
  margin-bottom: 20px;
  border-radius: 5px;
  padding: 15px 0;
}
.input-text {
  font-size: 14px;
  display: block;
}

.input-date {
  display: flex;
  margin-top: 10px;
  width: 100%;
  justify-content: space-between;
  font-family: sans-serif;
  color: grey;
}

.date-title {
  margin: 20px 0 0 0;
  font-family:'Playfair Display';
  font-size: 16px;
}
.date-picker {
  background-color: #f6f6f6;
  border-radius: 5px;
  width: 60%;
  margin-right: 10px;
  font-size: 14px;

}
.time-picker {
  background-color: #f6f6f6;
  border-radius: 5px;
  width: 40%;
  font-size: 14px;

}

.picker-date {
  padding: 5px;
}

.button {
  margin: 50px 0 50px 0;
}
.textarea {
  height: 3em;
}

.radio {
  display: flex;
  flex-direction: column;
}

.radio-group {
  display: flex;
  flex-direction: column;
}