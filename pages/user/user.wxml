<!-- one week -->
<view class="weekend-calendar">
  <image class="gif" src="/pages/images/whatsthisweek.gif"></image>
  <view class="h1" style="text-align: center">{{currentUser.nickname}},</view>
  <view class="h1" style="text-align: center">what are we doing this week?</view>
</view>
<scroll-view scroll-x class="scroll-header">
  <block wx:for="{{dayList}}" wx:for-index="index" wx:key="index">
    <view class="TimeOrderBox scroll-view-item bc_red {{id == index ? 'coloBack':''}}" id="{{index}}" bindtap="onLoad" data-selectTime="{{item.month}}/{{item.day}}" data-week="{{item.week}}">
        <text class="TimeOrderText weekText" xw:if="{{}}">{{item.week}}</text>
        <text class="TimeOrderText">{{item.month}}-{{item.day}}</text>
    </view>
  </block>
</scroll-view>

<view class="tabs">
    <view class="tab-menu">
      <view class="tab {{active == 1? 'active' : ''}} future p" style="font-size: 16px" data-tab="1" bindtap="_switchTab">Future Events</view>
      <view class="tab {{active == 0? 'active' : ''}} past p" style="font-size: 16px" data-tab="0" bindtap="_switchTab">Past Events</view>
    </view>
    <view wx:if="{{active==0}}" class="card">
      <view wx:for="{{pastEvents}}" wx:key="" wx:for-item="events" class="event-card" data-id="{{events.id}}" bindtap="showEvents">
        <view class="date-card month">
          <view style="color: grey">{{events.date[0]}}</view>
        </view>
        <view class="event-info" style="padding-left: 15px">
          <view class="h3">{{events.title}}</view>
          <view class="p description">{{events.description}}</view>
        </view>
      </view>
       <!-- this is tabone!!! -->
    </view>
    <view wx:if="{{active==1}}" class="card">
      <view wx:for="{{futureEvents}}" wx:key="" wx:for-item="events" class="event-card" bindtap="showEvents" data-id="{{events.id}}">
          <view class="date-card month">
            <view style="color: grey">{{events.date[0]}}</view>
          </view>
        <view class="event-info">
          <view class="h2">{{events.title}}</view>
          <view class="p">{{events.description}}</view>
          <view style="color: grey">{{events.time[0]}}</view>
        </view>
    
      </view>
      </view>
    </view>


<view class="login-button">
  <block wx:if="{{!currentUser}}">
    <form bindsubmit="onRegister">
      <view class="btn-area">
        <button class="buy-btn" open-type="getUserInfo" type="#FF3232" bindgetuserinfo="userInfoHandler">微信 Login</button>
      </view>
    </form>
  </block>
  <block wx:if="{{currentUser}}">
      <view class="btn-area" id="logout">
      <button class="buy-btn" bindtap="bindLogout">Log Out</button>
    </view>
  </block>
</view>

