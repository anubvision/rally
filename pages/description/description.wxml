
<view class="container">

  <view>
    <button bindtap="handleTapShareButton" class="button-share" open-type="share" type="share" role="button" aria-disabled="false" style="margin-left: 80%">
      <image src="/pages/images/share.png" style="width: 27px; height: 27px"></image>
    </button>
  </view>
  <view class="event-name-header h1">Event: {{events.title}}</view>
  <view class="event-details" style="color: grey">{{events.date}}</view>
  <view class="event-details">Description: {{events.description}}</view>
    <button class="map-btn" loading="{{loading}}" bindtap="default" hover-class="other-button-hover"> map </button>
  
  <view class="event-name-header">Attendees</view>
   <view class="event-details h1">We're all going...
    <view class="attendees-icons">
       <block wx:for="{{iconSize}}">
        <icon type="warn" size="{{item}}" color="#FF3232"/>
      </block>
    
      <view class="map-btn" text align="right"> more </view>
    </view>
  </view>
  <view class="event-details h1">Can you make it?
    <view class="rsvp">
      <view class="rsvp-btn"> Yes! </view>
      <view class="rsvp-btn"> No. </view>
      <view class="rsvp-btn"> Maybe </view>
    </view>
  </view>
</view>
