<view class="container">
  <view class="event-name-header">{{events.title}}</view>
  <view class="event-details">{{events.description}}
    <view class="map-div">
     <view class="map-btn" loading="{{loading}}" bindtap="default" hover-class="other-button-hover"> map </view>
    </view>
  </view>
  <view class="event-date" style="color: grey">{{events.date}}</view>
   <view class="event-details"><text class="h1">We're all going...</text>
    <view class="attendees-icons">
       <block wx:for="{{iconSize}}">
        <icon type="warn" size="{{item}}" color="#FF3232"/>
      </block>
    </view>
  </view>
  <view class="map-div more-btn">
    <view class="map-btn"> more </view>
  </view>
  <view class="event-details">
    <text class="h1">Can you make it?</text>
    <view class="rsvp">
      <view class="rsvp-btn" hover-class="rsvp-btn-hover" data-id="{{events.id}}" bindtap="yesButton" formType="submit">Yes!</view>
      
      <view class="rsvp-btn" hover-class="rsvp-btn-hover" bindtap="noButton"> No. </view>
    </view>
  </view>
<view class="creator-button">
    <view class="edit-button">
      <button bindtap="edit" class="button" role="button" aria-disabled="false" style="background-color: white">
        <image src="/pages/images/edit-01.png" style="width: 27px; height: 27px"></image>
        <view class="p">Edit</view>
      </button>
    </view>
    <view class="cancel-button">
      <button bindtap="deleteClick" type="delete" role="button" aria-disabled="false">Cancel</button>
      <!-- <view data-deleteid="{{events.id}}" bindtap="deleteClick">Cancel</view> -->
    </view>
    <view class="share-button">
      <button bindtap="handleTapShareButton" class="button-share" open-type="share" type="share" role="button" aria-disabled="false">
        <image src="/pages/images/share.png" style="width: 27px; height: 27px"></image>
        <view class="p">Share</view>
      </button>
    </view>
</view>

</view>


