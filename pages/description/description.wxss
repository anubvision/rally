.h1 {
  size: 30px;
  font-family: 'Playfair Display';
}

.event-name-header {
  font-family: 'Playfair Display';
  /* margin: 50px 0px 30px 0px; */
  padding: 15px 0px 15px 0px;
  width: 206px;
  background:white;
  border-radius: 2px;
  font-style: normal;
  font-weight: bold;
  font-size: 24px;
  color:black;
  text-align: center;
}

.container > image {
  width: 100%;
  height: 55%;
  overflow: visible;
}

.event-intro {
  display: flex;
  flex-direction: column;
  margin-top: 55px;
  text-align: center;
}
.description {
  width: 50vh;
  text-align: center;
}
.event-details {
  width: 90%;
  background: white;
}
.map-div {
  display: flex;
  justify-content: space-between;
  width: 90%;
  /* margin-top: 15px; */
}
.creator-btn {
  background-color: white;
}
.date {
  font-size: 20px;
  font-family: sans-serif;
  margin-top: 10px;
}

.map-btn {
  display: block;
  /* margin: 8px 10px 10px 0px; */
  font-size: 16px;
  background:#f6f6f6;
  border-radius: 50px;
  text-align: center;
  padding: 2px 8px;
  width: 20%;
}

.more-btn {
  margin-left: 116%;
  margin-top: 0; 
}
.date-add {
  display: flex;
  flex-direction: column;
  width: 95%;
  align-items: center;
  justify-content: space-between;
}
.rsvp-btn {
  display: block;
  padding: 6px 0px 6px 0px;
  font-size: 14px;
  background:#C1CAD1;
  color: white;
  border-radius: 50px;
  width: 80px;
  height: 20px;
  text-align: center;
  margin: 10px 7px 10px 7px;
}

.rsvp-btn-hover {
  display: block;
  padding: 6px 0px 6px 0px;
  font-size: 14px;
  background: rgba(255, 50, 50, 0.44);
  color: white;
  border-radius: 50px;
  width: 80px;
  height: 20px;
  text-align: center;
  margin: 10px 7px 10px 7px;
}

.attendees-icons {
  justify-content: center;
  padding: 18px 0 0 0;  
}

.rsvp {
  display: flex;
  justify-content: center;
}
.button-share {
  background-color: white;
}

.button {
  background-color: white;
}
.userImage {
  height: 40px;
  width: 40px;
  background-color: lavender;
  border-radius: 50%;
}
.radio {
  display: flex;
  flex-direction: column;
  
}
