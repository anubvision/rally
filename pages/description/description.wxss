.h1 {
  size: 30px;
  font-family: 'Playfair Display';
}

.event-name-header {
  font-family: 'Playfair Display';
  margin: 50px 0px 30px 0px;
  padding: 15px 0px 15px 0px;
  width: 206px;
  background:white;
  border-radius: 2px;
  font-style: normal;
  font-weight: bold;
  font-size: 24px;
  color:black;
  text-align: center;
}

.container > image {
  width: 100%;
  height: 55%;
  overflow: none;
}

.event-intro {
  display: flex;
  flex-direction: column;
  margin-top: 55px;
  text-align: center;
}

.description {
  width: 50vh;
  text-align: center;
}
.event-details {
  width: 100%;
  background: white;
  box-shadow: 4px 4px 5px rgba(172, 172, 172, 0.15);
  border-radius: 2px;
  margin: 10px 0 15px 0;
  padding: 15px 5px 0 5px;
}
.map-div {
  display: flex;
  justify-content: space-between;
  width: 75%;
  margin-top: 15px;
}
.event-date {
  width: 336px;
  background: white;
  margin: 10px 0 15px 0;
}

.map-btn {
  display: block;
  margin: 8px 10px 10px 0px;
  font-size: 11px;
  background:white;
  border: rgba(218, 218, 218, 0.13) solid 1px;
  border-radius: 50px;
  text-align: center;
}
.more-btn {
  margin-left: 116%;
  margin-top: 0; 
}

.rsvp-btn {
  display: block;
  padding: 6px 0px 6px 0px;
  font-size: 14px;
  background:#C1CAD1;
  color: white;
  border-radius: 50px;
  width: 80px;
  height: 20px;
  text-align: center;
  margin: 10px 7px 10px 7px;
}

.rsvp-btn-hover {
  display: block;
  padding: 6px 0px 6px 0px;
  font-size: 14px;
  background: rgba(255, 50, 50, 0.44);
  color: white;
  border-radius: 50px;
  width: 80px;
  height: 20px;
  text-align: center;
  margin: 10px 7px 10px 7px;
}

.attendees-icons {
  justify-content: center;
  padding: 18px 0 0 0;  
}

.rsvp {
  display: flex;
  justify-content: center;
}
.button-share {
  background-color: white;
}

.button {
  background-color: white;
}
