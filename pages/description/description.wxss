.h1 {
  size: 30px;
  font-family: 'Playfair Display';
}

.event-name-header {
  font-family: 'Playfair Display';
  margin: 50px 0px 30px 0px;
  padding: 15px 0px 15px 0px;
  width: 206px;
  background: #FF3232;
  border-radius: 2px;
  font-style: normal;
  font-weight: bold;
  font-size: 20px;
  color: #FFFFFF;
  text-align: center;
}
.event-intro {
  display: flex;
  flex-direction: column;
  margin-top: 55px;
  text-align: center;
}
.description {
  width: 50vh;
  text-align: center;
}
.event-details {
  width: 100%;
  background: white;
  margin: 10px 0 15px 0;
}
.map-div {
  display: flex;
  justify-content: space-between;
  width: 75%;
  margin-top: 15px;
}
.map-btn {
  display: block;
  font-size: 14px;
  padding: 3px 12px;
  background: #f6f6f6;
  border-radius: 50px;
  text-align: center;
}
.more-btn {
  margin-left: 116%;
  margin-top: 0; 
}

.rsvp-btn {
  display: block;
  padding: 6px 0px 6px 0px;
  font-size: 14px;
  border: rgba(218, 218, 218, 0.3) solid 1px;
  border-radius: 50px;
  width: 80px;
  height: 20px;
  text-align: center;
  margin: 10px 7px 10px 7px;
}

.attendees-icons {
  justify-content: center;
  padding: 18px 0 0 0;  
}

.rsvp {
  display: flex;
  justify-content: center;
}
.button-share {
  background-color: white;
}

.button {
  background-color: white;
}
