.h1 {
  size: 40px;
  font-family: 'Playfair Display';
}

.container > image {
  width: 100%;
  height: 55%;
  overflow: visible;
}

.event-intro {
  display: flex;
  flex-direction: column;
  margin-top: 55px;
  text-align: center;
}
.description {
  
  text-align: center;
  padding: 30px 0 10px 0;

}
.event-details {
  width: 90%;
  background: white;


}
.map-div {
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin: 30px 0 70px 0;

}

.address {
  font-size: 14px;
}

.creator-btn {
  background-color: white;
}
.date {
  font-size: 14px;
  font-family: sans-serif;
  margin: 5px 0 40px 0;

}

.map-btn {
  display: block;
  /* margin: 8px 10px 10px 0px; */
  font-size: 12px;
  background:#f6f6f6;
  border-radius: 50px;
  text-align: center;
  padding: 2px 8px;
  margin: 0 10px 0 0;

}

.more-btn {
  margin-left: 116%;
  margin-top: 0; 
}
.date-add {
  display: flex;
  flex-direction: column;
  width: 95%;
  align-items: center;
  justify-content: space-between;
}

.attendees {
  display: flex;
  flex-direction: center;
  justify-content: center;
  padding: 0 30px 70px;


}

.rsvp-btn {
  display: block;
  padding: 6px 0px 6px 0px;
  font-size: 14px;
  background:#C1CAD1;
  color: white;
  border-radius: 50px;
  width: 80px;
  height: 20px;
  text-align: center;
  margin: 10px 7px 10px 7px;
}

.rsvp-btn-hover {
  display: block;
  padding: 6px 0px 6px 0px;
  font-size: 14px;
  background: rgba(255, 50, 50, 0.44);
  color: white;
  border-radius: 50px;
  width: 80px;
  height: 20px;
  text-align: center;
  margin: 10px 7px 10px 7px;
}

.attendees-icons {
  justify-content: center;
  padding: 10px 5px 0 5px;

}

.rsvp {
  display: flex;
  justify-content: center;
  margin: 0 0 50px 0;

}
.button-share {
  background-color: white;
}

.button {
  background-color: white;
}
.userImage {
  height: 40px;
  width: 40px;
  background-color: lavender;
  border-radius: 50%;
}
