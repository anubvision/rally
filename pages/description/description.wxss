.container > image {
  width: 100%;
  height: 55%;
  overflow: visible;
}
.event-details {
  width: 90%;
}
.map-div {
  display: flex;
  justify-content: space-between;
  margin: 20px 0;
  align-items: center;
  box-shadow:  0 1px 0 rgba(120, 120, 120, 0.3);
}
.address {
  text-align: left;
  width: 75%;
}
.radio-group {
  display: flex;
  flex-direction: column
}
.radio radio {
  display: none;
  
}
.label{
  margin-left: 10rpx;
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
}
.radio {
  border: 1px solid #D9D9D9;
  border-radius: 5px;
  padding: 15px;
  text-align: center;
  margin: 5px 0;
  white-space: nowrap;
}

.radio:active {
  background-color: rgba(255, 50, 50, 0.85);
  color: #fff;
  border-radius: 5px;
  border: 1px solid rgba(255, 50, 50, 0.85);
  white-space:nowrap;
}
.scroll-view_H{
  white-space: nowrap;
}
.userImage {
  height: 60px;
  width: 60px;
  background-color: lavender;
  border-radius: 50%;
}


.creator-btn {
  background-color: white;
}
.date {
  font-size: 14px;
  font-family: sans-serif;
  margin: 5px 0 40px 0;
}
.map-btn {
  background:rgba(255, 50, 50, 0.85);
  border-radius: 50px;
  text-align: center;
  width: 15%;
  height: 5%;
  color: white;
}

.more-btn {
  margin-left: 116%;
  margin-top: 0; 
}
.date-add {
  display: flex;
  flex-direction: column;
  width: 95%;
  align-items: center;
  justify-content: space-between;
  font-size: 15px;
  margin: 10px 0 10px 0;
}

.attendees {
  display: flex;
  flex-direction: center;
  justify-content: center;
  padding: 0 30px 70px;
}

.rsvp-btn {
  display: block;
  padding: 10px 15px 10px 15px;
  font-size: 14px;
  background: #FF3232;
  color: white;
  border-radius: 50px;
  width: 80px;
  height: 20px;
  text-align: center;
  margin: 10px 7px 10px 7px;
}

.no-btn {
  display: block;
  padding: 10px 15px 10px 15px;
  font-size: 14px;
  background: #C1CAD1;
  color: white;
  border-radius: 50px;
  width: 80px;
  height: 20px;
  text-align: center;
  margin: 10px 7px 10px 7px;
}

.rsvp-btn-hover {
  display: block;
  padding: 10px 15px 10px 15px;
  font-size: 18px;
  background: #FF3232;
  color: white;
  border-radius: 50px;
  width: 80px;
  height: 20px;
  text-align: center;
  margin: 10px 7px 10px 7px;
}

.attendees-icons {
  justify-content: center;
  padding: 10px 5px 0 5px;

}

.rsvp {
  display: flex;
  justify-content: center;
  margin: 0 0 50px 0;

}
.button-share {
  background-color: white;
}

.button {
